# Production Environment Configuration
# Copy this file to .env and update the values

# Django Secret Key - Generate a new one for production
SECRET_KEY=your-super-secret-key-here-make-it-very-long-and-random

# Debug Mode - MUST be False in production
DEBUG=False

# Allowed Hosts - Add your domain and server IP
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-server-ip

# Database Configuration
# For PostgreSQL (recommended for production):
DATABASE_URL=postgres://portfolio_user:your_password@localhost:5432/portfolio_db

# For MySQL (alternative):
# DATABASE_URL=mysql://portfolio_user:your_password@localhost:3306/portfolio_db

# Email Configuration (optional - for contact forms)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security Settings (uncomment for production)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# SECURE_BROWSER_XSS_FILTER=True
# X_FRAME_OPTIONS=DENY
